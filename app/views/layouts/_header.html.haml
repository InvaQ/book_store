%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left.ml-15{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand Bookstore

      %a.shop-link.pull-right.visible-xs{href: "#"}
        %span.shop-icon
          %span.shop-quantity 3
    -if session[:cart_id]
      %a.shop-link.pull-right.hidden-xs{href: cart_path(id: session[:cart_id])}
        %span.shop-icon
          %span.shop-quantity 
            = @order.amount_of_books
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            %a{href: "/"} Home
          %li.dropdown
            %a.dropdown-toggle{href: '#', 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} Shop
            %ul.dropdown-menu
              - @category.each do |category|
                %li
                  %a{href: catalog_path(category)} 
                    = category.name
          %li
            - if user_signed_in?
              %a.dropdown-toggle{href: '#', 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} My account
              %ul.dropdown-menu                
                %li
                  = link_to "Orders"
                -if can? :access, :rails_admin
                  %li
                    = link_to "admin",  rails_admin_path
                %li
                  = link_to "Settings", settings_path(current_user)
                %li.divider{role: "separator"}
                %li
                  = link_to "Logout", destroy_user_session_path, method: :delete
              
            - else
              = link_to "Login", new_user_session_path