%main.container.general-main-wrap
  %h1.mt-0.mb-25 My Orders
  %p.in-grey-600.small.mb-10.visible-xs Sort by
  
  .dropdown.general-order-dropdown.mb-20
    %a.dropdown-toggle.dropdown-btn{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
      All
      %i.fa.fa-angle-down.dropdown-icon
    %ul.dropdown-menu
      %li
        %a{href: orders_path(filter: 'all')} All
      %li
        %a{href: orders_path(filter: 'complete')} complete
      %li
        %a{href: orders_path(filter: 'in_transit')} in_transit
      %li
        %a{href: orders_path(filter: 'delivered')} delivered
      %li
        %a{href: orders_path(filter: 'canceled')} canceled
  .hidden-xs.mb-res-50
    %table.table.table-hover
      %thead
        %tr
          %th
            %span.in-grey-600 Number
          %th
            %span.in-grey-600 Ordered at
          %th
            %span.in-grey-600 Status
          %th
            %span.in-grey-600 Total
      %tbody
        - unless presenter.have_any_orders?
          %tr
            %td
              %h2.text-center No results
        - else
          - presenter.orders.each do |order|
            %tr
              %td
                %a.general-order-number{href: order_path(order.id)}=order.generate_number
              %td
                %span.in-grey-900.font-16.font-weight-light=order.ordered_at
              %td
                %span.font-16.in-grey-900.font-weight-light=order.state.capitalize
              %td
                %strong.font-16=number_to_currency(order.total_price)
          
    