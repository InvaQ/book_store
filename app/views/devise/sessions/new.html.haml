<!DOCTYPE html>
%html
  %head
    %meta{charset: "UTF-8"}
    %meta{name: "viewport", content: "width=device-width"}
    %title Bookstore
    %link{href: "https://fonts.googleapis.com/css?family=Open+Sans:300,400,600", rel: "stylesheet"}
    %link{href: "../css/style.css", rel: "stylesheet"}
  %body
    %main.container.general-main-wrap
      .text-center
        %h3.general-login-title Log In
        = link_to user_facebook_omniauth_authorize_path, class: 'general-login-icon' do
          %i.fa.fa-facebook-official
        %p.general-login-text or
      .general-form
        =form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-group.mb-30
            =f.label 'Enter Email', class: 'control-label font-weight-light'
            =f.email_field :email, autofocus: true,  placeholder: "Enter Email", class: 'form-control', id: 'email'          
            =f.label 'Password', class: 'control-label font-weight-light'
            =f.password_field :password, autocomplete: "off",  placeholder: "Password", class: 'form-control', id: 'password'

            - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'    
              %a.help-block.in-gold-500{href: new_password_path(resource_name)} Forgot password?

            - if devise_mapping.rememberable?
              .form-group.checkbox.text-center.mb-30
                %label.font-weight-light.pl-0
                  =f.check_box :remember_me, class: 'checkbox-input' , hidden: "true"
                  %span.checkbox-icon
                    %i.fa.fa-check
                  =f.label :remember_me, class: 'checkbox-text'
            =f.submit "Log in", class: 'btn btn-default mb-20'
            
          =link_to 'Back to Store', catalog_index_path, class: 'btn btn-default mb-20'
      %p.general-sign-text.text-center
        Donâ€™t have an Account?
        = link_to "Sign Up", new_user_registration_path, class: 'in-gold-500'
      /= render "devise/shared/links"
        
    %script{src: "https://use.fontawesome.com/67602d7308.js"}
    %script{src: "../../javascripts/jquery.js"}
    %script{src: "../../javascripts/bootstrap.js"}
