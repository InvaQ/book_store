<!DOCTYPE html>
%html
  %head
    %meta{charset: "UTF-8"}
    %meta{name: "viewport", content: "width=device-width"}
    %title Bookstore
    %link{href: "https://fonts.googleapis.com/css?family=Open+Sans:300,400,600", rel: "stylesheet"}
    %link{href: "../css/style.css", rel: "stylesheet"}
  %body
    %main.container.general-main-wrap
      .text-center
        %h3.general-login-title Sign up
      .general-form
        =form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .form-group.mb-30
            =f.label 'Enter Email', class: 'control-label font-weight-light'
            =f.email_field :email, autofocus: true,  placeholder: "Enter Email", class: 'form-control', id: 'email'   
          .form-group.mb-30 
            =f.label 'Password', class: 'control-label font-weight-light'
            =f.password_field :password, autocomplete: "off",  placeholder: "Password", class: 'form-control', id: 'password'
          .form-group.mb-30 
            =f.label 'Confirm Password', class: 'control-label font-weight-light'
            =f.password_field :password_confirmation, autocomplete: "off",  placeholder: "Confirm Password", class: 'form-control'
          .form-group.mb-30 
            =f.submit "Sign up", class: 'btn btn-default mb-20'

          =link_to 'Back to Store', catalog_index_path, class: 'btn btn-default mb-20'
        
    %script{src: "https://use.fontawesome.com/67602d7308.js"}
    %script{src: "../../javascripts/jquery.js"}
    %script{src: "../../javascripts/bootstrap.js"}
