%main.container.general-main-wrap
  %h1.general-title-margin Cart
  .visible-xs        
  .hidden-xs
    =simple_form_for @order, url: cart_path, method: :patch do |f|
      =render 'table', field: f
      .general-order-wrap
        .row
          .col-sm-4
            .input-group.general-input-group
              = f.simple_fields_for :coupon, @coupon_form do |coupon|
                .mb-30
                  = coupon.input :code
              %div
                = f.submit 'Update cart', class: 'btn btn-primary mb-15 res-block'
                  
      
          .col-sm-8
            .res-mr-200.text-center.general-text-right

              =render '/orders/order_summary'
        = f.submit 'checkout', name: :to_checkout,   class: 'button btn btn-default mb-20.hidden-xs.center-block'     

