%table.table.table-hover
  %tr.no-hover
    %th.col-pic.pl-0
      %span.in-grey-600 Product
    %th.col-title
    %th.col-price
      %span.in-grey-600 Price
    %th.col-quantity
      %span.in-grey-600 Quantity
    %th.col-total
      %span.in-grey-600 SubTotal
    %th.col-closea
  - cart.line_items.each do |line|
    %tr
      %td
        .general-img-wrap-table
          =image_tag line.book.pictures.first.image_url
      %td
        %p.general-title 
          =line.book.title
      %td
        %span.font-16.in-gold-500 
          =line.book.price
      %td
        %span.font-16.in-gold-500 
          .input-group.general-position
            %div.input-link
              %i.glyphicon.glyphicon-minus.line-height-40{type: 'button', onclick: "decrementVal()"}
            =field.text_field :quantity, value: line.quantity, class: 'form-control quantity-input', id: 'form_quantity'
            %div.input-link
              %i.glyphicon.glyphicon-plus.line-height-40{type: 'button', onclick: "incrementVal()"}
      %td
        %span.font-16.in-gold-500 
          =line.total_price
      %td
        %button.close.general-cart-close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
          