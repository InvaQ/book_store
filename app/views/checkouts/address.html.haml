<!DOCTYPE html>
%html  
  %main.container
    = render 'steps', steps: @steps
    = simple_form_for @order, url: checkout_path, class: 'res-mb-100' do |field|
      .hidden-xs.hidden-sm
        .row
          .col-md-5
            %h3.general-subtitle.mt-0 Billing Address
          .col-md-5.col-md-offset-1
            %h3.general-subtitle.mt-0 Shipping Address
      .row
        .col-md-5.mb-40
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0 Billing Address
          = field.simple_fields_for :billing,@billing do |item_field|   
            = render 'users/fields', field: item_field
        .col-md-5.mb-40.col-md-offset-1.mb-25
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0 Shipping Address
          = field.simple_fields_for :shipping, @shipping do |item_field|
            = render 'users/fields', field: item_field

          .form-group.checkbox
            %label.checkbox-label
              = check_box_tag :use_billing, nil, class: 'checkbox-input', hidden: 'hidden', id: 'use_billing'
              %span.checkbox-icon
                %i.fa.fa-check
              %span.checkbox-text use_billing

      = render 'orders/order_summary', object: @order, components: [:coupon] 
      .col-md-12.mb-40
        .center-block.general-text-align.center        
          = field.submit 'save_and_continue', class: 'button btn btn-default mb-20'

  %script{src: "https://use.fontawesome.com/67602d7308.js"}
  %script{src: "../../javascripts/jquery.js"}
  %script{src: "../../javascripts/bootstrap.js"}
    



    