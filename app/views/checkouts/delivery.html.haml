%main.container.general-main-wrap      
  =render 'steps', steps: @steps
  %h3.general-subtitle Delivery
  .visible-xs
  = form_tag checkout_path, class: 'delivery_form', method: :patch do
    .hidden-xs.mb-res-50
      = render 'deliveries/deliveries_md', deliveries: @order
    
      = render 'orders/order_summary'
    .col-md-12.mb-40
      .center-block.general-text-align.center
        = submit_tag 'Save and continue', class: 'button btn btn-default mb-20'