   
%main.container
  #slider.carousel.slide{'data-ride': "carousel"}
    %ol.carousel-indicators.general-carousel-indicators
      -presenter.slider.each do |slide|
        %li{ class: "#{'active' if slide == 0}",
          'data-target': "#slider", 'data-slide-to': slide }
    .carousel-inner{role: "listbox"}
      -presenter.show_latest_books.each_with_index do |book, index|
        .item{class: " #{'active' if index == 1}"}
          .row
            .col-sm-5
              .general-img-wrap
                %img.img-shadow.general-thumbnail-img
                  =image_tag(book.pictures.first.image_url)
            .col-sm-7
              .mb-60
                %h1=book.title
                %p.lead=truncate(book.description, length: 50)
                %p.in-grey-600.small=book.get_author_names   
                .general-align.pt-20
                  =link_to 'Buy Now',create_line_item_book_path(id: book.id, book: {quantity: '1'}), method: :post, class: 'btn btn-primary'
        
    %a.left.carousel-control{href: "#slider", role: "button", 'data-slide': "prev"}
      %span.icon-prev{'aria-hidden': "true"}
      %span.sr-only Previous
    %a.right.carousel-control{href: "#slider", role: "button", 'data-slide': "next"}
      %span.icon-next{'aria-hidden': "true"}
      %span.sr-only Next
.container
  .jumbotron.text-center.mb-0
    %h2.h1= t('.wellcome')
    .mb-res-50
      %p.in-grey-600= t('.best_sellers')
      =link_to 'Get Started', catalog_index_path, class: 'btn btn-default' 
  .mb-35
    %h3= t('.best_sellers')
    .row
      -presenter.show_bestsellers.each do |bestseller|
        .col-sm-6.col-md-3
          .general-thumb-wrap
            .thumbnail.general-thumbnail
              %img.img-shadow.general-thumbnail-img
                =image_tag(bestseller.pictures.first.image_url)
              .thumb-hover
                .general-thumb-link-wrap
                  %a.thumb-hover-link{href:  book_path(bestseller)}
                    %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                  =link_to create_line_item_book_path(id: bestseller.id, book: {quantity: '1'}), method: :post, class: 'thumb-hover-link' do
                    %i.fa.fa-shopping-cart.thumb-icon
          .mb-35
            .clearfix
              %p.pull-right.font-16.in-gold-500=number_to_currency(bestseller.price)
              %p.general-title.mr-55=bestseller.title
            %span.divider-sm
            %p.in-grey-600.small=bestseller.get_author_names         
          