      = render  "filter_panel", locals: {width: 240}
    %ul.list-inline.pt-10.mb-25.mr-240
      %li.mr-35
        %a.filter-link{href: catalog_index_path}
          All
          %span.badge.general-badge 
            =Book.count
      - @categories.each do |category|
        %li.mr-35{:class => "#{"active" if @category == category}"}
          = link_to catalog_path(category, sort_type: params[:sort_type]), class: "filter-link" do
            = category.name
            %span.badge.general-badge
              = category.books_in_category
