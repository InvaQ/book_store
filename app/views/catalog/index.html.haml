%main.container
  %h1.general-title-margin Ð¡atalog
  .hidden-xs.clearfix
    .pull-right
      .dropdown
        %a.dropdown-toggle.dropdown-btn{class: "width-240", href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
          = @current_filter
          %i.fa.fa-angle-down.dropdown-icon
        %ul.dropdown-menu
          %li
            = link_to "A - Z", catalog_index_path(sort_type: :title_asc)
          %li
            = link_to "Z - A", catalog_index_path(sort_type: :title_desc)
          %li
            = link_to "Newest first", catalog_index_path(sort_type: :newest)
          %li
            = link_to "Popular first", catalog_index_path(sort_type: :popular)
          %li
            = link_to "Price: high to low", catalog_index_path(sort_type: :high_price)
          %li
            = link_to "Price: low to high", catalog_index_path(sort_type: :low_price)
            
    %ul.list-inline.pt-10.mb-25.mr-240
      %li.mr-35
        %a.filter-link{href: catalog_index_path}
          All
          %span.badge.general-badge 
            =Book.count
      - @categories.each do |category|
        %li.mr-35
          %a.filter-link{href: catalog_path(category)}
            = category.name
            %span.badge.general-badge
              = category.books_in_category
  .mb-40.visible-xs
    %p.in-grey-600.small.mb-10 Filter by category
    .dropdown.mb-20
      %a.dropdown-toggle.dropdown-btn{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
        Newest first
        %i.fa.fa-angle-down.dropdown-icon
      %ul.dropdown-menu
        %li
          %a{href: "#"} Newest first
        %li
          %a{href: "#"} Popular first
        %li
          %a{href: "#"} Price: Low to hight
        %li
          %a{href: "#"} Price: Low to hight
  .mb-120
    .row.pagination
      =render "catalog_list"
    .text-center
      = link_to_next_page  @books,'View More', remote: true, id: 'load_more_link', class: 'btn btn-primary'
  