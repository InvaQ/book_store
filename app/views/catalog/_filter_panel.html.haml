.dropdown
  %a.dropdown-toggle.dropdown-btn{class: "width-240", href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
    = @current_filter
    %i.fa.fa-angle-down.dropdown-icon
  %ul.dropdown-menu
    %li
      = link_to "A - Z", catalog_path(@category, sort_type: :title_asc)
    %li
      = link_to "Z - A", catalog_path(@category, sort_type: :title_desc)
    %li
      = link_to "Newest first", catalog_path(@category, sort_type: :newest)
    %li
      = link_to "Popular first", catalog_path(@category, sort_type: :popular)
    %li
      = link_to "Price: high to low", catalog_path(@category, sort_type: :high_price)
    %li
      = link_to "Price: low to high", catalog_path(@category, sort_type: :low_price)