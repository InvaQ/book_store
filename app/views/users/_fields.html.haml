=field.hidden_field :addressable_type, value: type
-[:first_name, :last_name, :address, :city, :zip].each do |string|
  .form-group
    =field.input string, id: "#{string}"
.form-group
  =field.input :country_id, collection: @countries,  id: 'country',  placeholder: "Select a country"
.form-group.mb-60
  =field.input :phone, id: "phone", type: "tel", placeholder: "Example +355 66 123 4567"